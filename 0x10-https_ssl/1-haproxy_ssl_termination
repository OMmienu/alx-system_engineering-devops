global
	log /dev/log  local0
	stats  socket /run/haproxy/admin.sock mode 660 admi level

defaults
	log     global
	mode    http
	option  httplog
	timeout connect  10s
	timeout client   30s
	timeout server   30s

frontend ommienu.tech
	bind *80
	bind *:433 ssl crt /etc/haproxy/certs/ommienu.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend ommienu.tech_backend

backend ommienu.tech_backend
	balance roundrobin
	server 96368-web-01 34.232.78.199:80 check
	server 96368-web-02 52.86.106.209:80 check
